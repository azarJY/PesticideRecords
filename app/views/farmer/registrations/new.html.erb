<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>新規会員登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "farmer/shared/error_messages", resource: resource %>
      <table class="table">
        <tr><th scope="col-6">農場名</th>
          <td>
            <div class="field">
              <%= f.text_field :farm_name %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-10">名前</th>
          <td>
            <div class="field">
              <%= f.label :last_name, "(姓)" %>
              <%= f.text_field :last_name %>
              <%= f.label :first_name, "(名)" %>
              <%= f.text_field :first_name %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-10">フリガナ</th>
          <td>
            <div class="field">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana %>
              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-6">栽培作物</th>
          <td>
            <div class="field">
              <%= f.text_field :crop %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-6">メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-6">パスワード(6文字以上)</th>
          <td>
            <div class="field">
              <% if @minimum_password_length %>
              <% if @minimum_password_length %>
                <em style="display: none;">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
        <tr><th scope="col-6">パスワード(確認用)</th>
          <td>
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </td>
        </tr>
      </table>
      
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>