<div class="row pt-3">
  <%= render 'layouts/calculator', farmer: @farmer %>
  <div class="col-md-1"></div>
  <div class="col-md-7">

    <h1 class="d-flex justify-content-center">マイページ</h1>
    <div class="col-pt-2 d-flex justify-content-end">
      <% unless @farmer.guest? %>
        <%= link_to "編集する", edit_farmer_current_farmer_path, class:"btn btn-success" %>
      <% else %>
        <p>ゲストユーザー編集は行えません。</p>
      <% end %>
    </div>

    <table class="table col-8 mt-4">
      <tr>
        <th class="table-dark">農場名</th>
        <td>
          <%= @farmer.farm_name %>
        </td>
      </tr>
      <tr>
        <th class="table-dark">名前</th>
        <td>
          <%= @farmer.last_name %>  <%= @farmer.first_name %>
        </td>
      </tr>
      <tr>
        <th class="table-dark">名前カナ</th>
        <td>
          <%= @farmer.last_name_kana %>  <%= @farmer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th class="table-dark">栽培作物</th>
        <td><%= @farmer.crop %></td>
      </tr>
      <tr>
        <th class="table-dark">メールアドレス</th>
        <td><%= @farmer.email %></td>
      </tr>
    </table>
  </div>
  </div>
</div>