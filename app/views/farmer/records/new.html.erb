<div class="container">
  <%= render 'layouts/calculator', farmer: @farmer %>
  <div class="row">
    <div class="col">
      <h2>使用記録新規作成</h2>
      <%= form_with model: @record, url:farmer_records_confirm_path, method: :post do |f| %>
        <table class="table">
          <tr>
            <th scope="col">日付</th>
            <td>
              <%= form.text_field :day, class: 'form-control flatpickr', data: {enable_time: false} %>
            </td>
          </tr>
          <tr>
            <th scope="col">農薬名</th>
            <td>
              <%= f.select :pesticide_id, options_from_collection_for_select(@farmer.pesticide, :id, :name) %>
            </td>
          </tr>
          <tr>
            <th scope="col">散布区画</th>
            <td>
              <%= f.select :farmland_id, options_from_collection_for_select(@farmer.farmland, :id, :farmland) %>
            </td>
          </tr>
          <tr>
            <th scope="col">使用量(単位も入力)</th>
            <td><%= f.text_field :anount %></td>
          </tr>
          <tr>
            <th scope="col">原水(単位も入力)</th>
            <td><%= f.text_field :water %></td>
          </tr>
          <tr>
            <th scope="col">散布者</th>
            <td><%= f.text_field :user %></td>
          </tr>
          <tr>
            <th scope="col">確認者</th>
            <td><%= f.text_field :confimer %></td>
          </tr>
          
        </table>
        <%= f.submit '確認ページへ移行', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>